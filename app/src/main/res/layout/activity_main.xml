<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.amalhanaja.kartunama.MainActivity">

    <ImageView
        android:id="@+id/gambar_bagus_dewe"
        android:src="@drawable/gambar_bagus_dewe"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/text_view_atas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kartu Nama"
        android:textSize="32sp"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:gravity="center_horizontal"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pojok Bawah"
        android:layout_margin="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        />

</RelativeLayout>
